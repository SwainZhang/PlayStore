<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!--Toolbar-->
    <!--<include layout="@layout/layoutcustom_toolbar"/>-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/tl_custom"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar">
    </android.support.v7.widget.Toolbar>
    <!--drawerlayou-->
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/main_drawlerlayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--内容部分-->
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.yohoho.googleplay.MainActivity">

            <views.PagerSlidingTabStripExtends
                android:id="@+id/tabs"
                xmlns:myattrs="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                myattrs:pstsIndicatorColor="@color/theme"
                myattrs:pstsIndicatorHeight="5dp"
                myattrs:pstsSelectedTabTextColor="@color/theme"
                myattrs:pstsSelectedTabTextSize="20sp"
                myattrs:pstsTabTextColor="#333333"
                myattrs:pstsTabTextSize="16sp"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/main_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tabs">
            </android.support.v4.view.ViewPager>
        </RelativeLayout>
        <!-- 左menu部分-->
        <FrameLayout
            android:id="@+id/main_menu"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/theme">
        </FrameLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>

